<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/simple_text_type"
        style="@style/edit_text_general_params"
        android:autofillHints="@string/hint_text_input_type"
        android:hint="@string/hint_text_input_type"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/person_name_type"
        style="@style/edit_text_general_params"
        android:autofillHints="@string/hint_person_name_input_type"
        android:hint="@string/hint_person_name_input_type"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/simple_text_type" />

    <EditText
        android:id="@+id/phone_type"
        style="@style/edit_text_general_params"
        android:autofillHints="@string/hint_phone_input_type"
        android:hint="@string/hint_phone_input_type"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/person_name_type" />

    <EditText
        android:id="@+id/number_type"
        style="@style/edit_text_general_params"
        android:autofillHints="@string/hint_number_input_type"
        android:hint="@string/hint_number_input_type"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_type" />

    <EditText
        android:id="@+id/password_type"
        style="@style/edit_text_general_params"
        android:autofillHints="@string/hint_password_input_type"
        android:hint="@string/hint_password_input_type"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_type" />

    <EditText
        android:id="@+id/date_type"
        style="@style/edit_text_general_params"
        android:autofillHints="@string/hint_date_type"
        android:hint="@string/hint_date_type"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_type" />

    <EditText
        android:id="@+id/email_type"
        style="@style/edit_text_general_params"
        android:autofillHints="@string/hint_email_input_type"
        android:hint="@string/hint_email_input_type"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_type" />


</androidx.constraintlayout.widget.ConstraintLayout>